<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- iOS风格应用主题 -->
    <style name="Theme.PaymentMonitor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主色调 - iOS蓝 -->
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorPrimaryVariant">@color/ios_blue_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- 次要颜色 -->
        <item name="colorSecondary">@color/ios_green</item>
        <item name="colorSecondaryVariant">@color/ios_green_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- 背景颜色 -->
        <item name="android:colorBackground">@color/ios_background</item>
        <item name="colorOnBackground">@color/ios_text_primary</item>
        
        <!-- 表面颜色 -->
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/ios_text_primary</item>
        
        <!-- 错误颜色 -->
        <item name="colorError">@color/ios_red</item>
        <item name="colorOnError">@android:color/white</item>
        
        <!-- 状态栏 -->
        <item name="android:statusBarColor">@color/ios_background</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- 导航栏 -->
        <item name="android:navigationBarColor">@color/ios_background</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>